<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HeaderHero"
        x:Class="HeaderHero.ReportWindow"
        Title="Report"
        Width="1000" Height="700"
        MinWidth="400" MinHeight="300">
    <Window.Styles>
        <Styles>
            <Style Selector="TabControl > TabItem">
                <Setter Property="FontSize" Value="{DynamicResource FontSizeNormal}"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="Padding" Value="6,4"/>
                <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
                <Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderMidBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="3,3,0,0"/>
            </Style>
            <Style Selector="TabControl > TabItem:selected">
                <Setter Property="Background" Value="{DynamicResource ThemeControlLowBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource ThemeBorderHighBrush}"/>
                <Setter Property="FontWeight" Value="Normal"/>
            </Style>
            <Style Selector="TabControl > TabItem:selected /template/ Border#PART_SelectedPipe">
                <Setter Property="IsVisible" Value="false"/>
            </Style>
        </Styles>
    </Window.Styles>
    <Window.Resources>
        <DataTemplate x:Key="ReportFileTemplate"
                      x:DataType="local:Parser.ReportFile">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="{Binding count}" Width="60"/>
                <TextBlock Text="{Binding name}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <TabControl x:Name="Tabs">
        <TabItem Header="Report">
            <Grid RowDefinitions="Auto,Auto,Auto,3*,Auto,3*,Auto,*" Margin="12">
                <TextBlock Grid.Row="0" Text="Report" FontWeight="Bold" />
                <TextBox Grid.Row="1" x:Name="SummaryText" FontFamily="Consolas,Monospace" TextWrapping="NoWrap" IsReadOnly="True"/>
                <TextBlock Grid.Row="2" Text="Biggest contributors:" Margin="0,10,0,0" />
                <ListBox Grid.Row="3" x:Name="BiggestList" ItemTemplate="{StaticResource ReportFileTemplate}" DoubleTapped="ReportFileList_OnDoubleTapped" />
                <TextBlock Grid.Row="4" Text="Header Hubs:" Margin="0,10,0,0" />
                <ListBox Grid.Row="5" x:Name="HeaderHubsList" ItemTemplate="{StaticResource ReportFileTemplate}" DoubleTapped="ReportFileList_OnDoubleTapped" />
                <TextBlock Grid.Row="6" Text="Precompiled Headers:" Margin="0,10,0,0" />
                <ListBox Grid.Row="7" x:Name="PrecompiledHeadersList" ItemTemplate="{StaticResource ReportFileTemplate}" DoubleTapped="ReportFileList_OnDoubleTapped" />
            </Grid>
        </TabItem>
        <TabItem Header="Includes">
            <Grid Margin="12"
                  RowDefinitions="Auto,*"
                  ColumnDefinitions="*,*,*">

                <!-- Top labels -->
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock Text="Included by:" Margin="0,0,0,2"/>
                    <Grid ColumnDefinitions="*,70,70">
                        <TextBlock Grid.Column="0" Text="File"  FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="Count" FontWeight="Bold" TextAlignment="Right" Margin="12,0,0,0"/>
                        <TextBlock Grid.Column="2" Text="Lines" FontWeight="Bold" TextAlignment="Right" Margin="12,0,0,0"/>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="8">
                    <Button x:Name="BackButton" Content="← Back" Width="70" Click="BackButton_OnClick"/>
                    <TextBlock x:Name="CurrentFileLabel"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2">
                    <TextBlock Text="Includes:" Margin="0,0,0,2"/>
                    <Grid ColumnDefinitions="*,70,70">
                        <TextBlock Grid.Column="0" Text="File"  FontWeight="Bold"/>
                        <TextBlock Grid.Column="1" Text="Count" FontWeight="Bold" TextAlignment="Right" Margin="12,0,0,0"/>
                        <TextBlock Grid.Column="2" Text="Lines" FontWeight="Bold" TextAlignment="Right" Margin="12,0,0,0"/>
                    </Grid>
                </StackPanel>

                <!-- Bottom row: three panes -->
                <!-- Left: Included by -->
                <ListBox x:Name="IncludedByList"
                         Grid.Row="1" Grid.Column="0" DoubleTapped="IncludedBy_OnDoubleTapped">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="local:IncludeRow">
                            <Grid ColumnDefinitions="*,70,70" Margin="0,0,0,2">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Name}" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Count}"
                                           TextAlignment="Right"
                                           Margin="12,0,0,0"/>
                                <TextBlock Grid.Column="2"
                                           Text="{Binding Lines}"
                                           TextAlignment="Right"
                                           Margin="12,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Middle: file details -->
                <TextBox x:Name="FileDetailsText"
                         Grid.Row="1" Grid.Column="1"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         TextWrapping="Wrap"/>

                <!-- Right: Includes -->
                <ListBox x:Name="IncludesList"
                         Grid.Row="1" Grid.Column="2" DoubleTapped="Includes_OnDoubleTapped">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="local:IncludeRow">
                            <Grid ColumnDefinitions="*,70,70" Margin="0,0,0,2">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Name}" />
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Count}"
                                           TextAlignment="Right"
                                           Margin="12,0,0,0"/>
                                <TextBlock Grid.Column="2"
                                           Text="{Binding Lines}"
                                           TextAlignment="Right"
                                           Margin="12,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Grid>
        </TabItem>
        <TabItem Header="Errors">
            <ListBox x:Name="ErrorsList" Margin="12"/>
        </TabItem>
        <TabItem Header="Missing Files">
            <ListBox x:Name="MissingFilesList" Margin="12">
                <ListBox.ItemTemplate>
                    <DataTemplate x:DataType="local:MissingFilesRow">
                        <TextBlock Text="{Binding Name}" ToolTip.Tip="{Binding Origin}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </TabItem>
    </TabControl>
</Window>
