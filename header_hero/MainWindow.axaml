<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="800" Height="600"
        MinWidth="400" MinHeight="300"
        x:Class="HeaderHero.MainWindow"
        Title="Header Hero">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New Project" x:Name="NewProjectMenu"/>
                <Separator/>
                <MenuItem Header="_Open Project..." x:Name="OpenProjectMenu"/>
                <MenuItem Header="_Close Project" x:Name="CloseProjectMenu"/>
                <MenuItem Header="_Save Project..." x:Name="SaveProjectMenu"/>
                <Separator/>
                <MenuItem Header="_Quit" x:Name="QuitMenu"/>
            </MenuItem>
            <MenuItem Header="_Scan">
                <MenuItem Header="_Scan" x:Name="ScanMenu"/>
                <MenuItem Header="_Clean Rescan" x:Name="CleanRescanMenu"/>
            </MenuItem>
        </Menu>
        <Grid Margin="12" ColumnDefinitions="100,*" RowDefinitions="Auto,*,*,Auto" RowSpacing="8" ColumnSpacing="8">

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Last scan:"/>
            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LastScanLabel" Text="(never scanned)" VerticalAlignment="Center"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Project dirs:"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="ProjectDirsTextBox" AcceptsReturn="True" VerticalAlignment="Stretch"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Include dirs:"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="IncludeDirsTextBox" AcceptsReturn="True" VerticalAlignment="Stretch"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Precomp. header:"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="PchTextBox" VerticalAlignment="Center"/>
        </Grid>
    </DockPanel>
</Window>
